<Window x:Class="ClientWpf.View.SinglePlayerMaze"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWpf.View" 
        xmlns:controls="clr-namespace:ClientWpf.View.Controls"
        mc:Ignorable="d"
        Title="SinglePlayerMaze" Height="600" Width="600" KeyDown="Window_KeyDown">
    <Canvas>
        <controls:MazeBoardControl MazeRows="{Binding MazeRows}" MazeCols="{Binding MazeCols}"
                                   MyLocation="{Binding MyLocation}" OtherLocation="{Binding OtherLocation}"
                                   FinishLocation="{Binding FinishLocation}">
        </controls:MazeBoardControl>
    </Canvas>
</Window>
